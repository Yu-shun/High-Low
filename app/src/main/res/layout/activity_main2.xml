<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#03A9F4"
        tools:context=".Main2Activity">

    <ImageView
            android:layout_width="282dp"
            android:layout_height="378dp" app:srcCompat="@drawable/one" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/ranCard"/>
    <Button
            android:text="One more Challenge!!"
            android:layout_width="205dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/back" android:textSize="18sp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/ranCard"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textStyle="bold"/>
    <TextView
            android:layout_width="397dp"
            android:layout_height="79dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/result" android:textSize="30sp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/ranCard"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.92" android:textColor="#F44336" android:text="結果は…"
            android:textStyle="bold" android:textIsSelectable="false" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>