<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#03A9F4"
        tools:context=".MainActivity">

    <TextView
            android:text="このカ～ドは・・・"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:textSize="36sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.766" android:textColor="#FF5722" android:textStyle="bold"/>
    <Button
            android:text="7未満"
            android:layout_width="147dp"
            android:layout_height="69dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/down" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.535" android:textSize="30sp" android:textColor="#FFEB3B"
            style="@style/Widget.AppCompat.Button.Colored" android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.164" android:onClick="onButtonTapped"/>
    <ImageView
            android:layout_width="278dp"
            android:layout_height="391dp" app:srcCompat="@drawable/ura" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintVertical_bias="0.498"/>
    <Button
            android:text="7以上"
            android:layout_width="147dp"
            android:layout_height="69dp"
            android:id="@+id/up" app:layout_constraintStart_toEndOf="@+id/down" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            app:layout_constraintTop_toTopOf="@+id/down" android:textColor="#4CAF50"
            style="@style/Widget.AppCompat.Button.Colored" android:textSize="30sp" android:textStyle="bold"
            android:onClick="onButtonTapped"/>

</android.support.constraint.ConstraintLayout>